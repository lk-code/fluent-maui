<?xml version="1.0" encoding="UTF-8"?>

<Shell x:Class="FluentMAUI.Samples.UI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:FluentMAUI.Samples.UI"
       xmlns:controls="clr-namespace:FluentMAUI.Samples.UI.Controls">

    <FlyoutItem Title="Overview">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Basic Input">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate controls:BasicInput}" />
        </Tab>
    </FlyoutItem>

</Shell>